@model MVCCrudOper.Models.AddEmployeeViewModel


<form method="post" action="Add">

	<div class="form-group">
		<label for="">Name</label>
		<input type="text" class="form-control" asp-for="Name">
	</div>
	<div class="form-group">
		<label for="">Email</label>
		<input type="email" class="form-control" asp-for="Email">
	</div>
	<div class="form-group">
		<label for="">Salary</label>
		<input type="number" class="form-control" asp-for="Salary">
	</div>
	<div class="form-group">
		<label for="">DOB</label>
		<input type="date" class="form-control" asp-for="DataOfBirth">
	</div>
	<div class="form-group">
		<label for="">Department</label>
		<input type="text" class="form-control" asp-for="DepartMent">
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>


</form>

